<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 按钮定义 -->
    <declare-styleable name="RoundButton">
        <attr name="image" format="reference"/>
        <attr name="bgcolor" format="color"/>
        <attr name="textColor" format="color"/> 
        <attr name="text" format="string"/>
        <attr name="radius" format="float"/>
        <attr name="highlightColor" format="color"/>
        <attr name="highlightMode" format="enum">
            <enum name="none" value="0"/>
            <enum name="image" value="1"/>
            <enum name="background" value="2"/>
        </attr>
    </declare-styleable>
    <!-- RippleView -->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer"/>
        <attr name="rv_rippleDuration" format="integer"/>
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />
    </declare-styleable>
    <!-- item action button -->
    <declare-styleable name="ItemActionButton">
		<attr name="iab_name" format="string"/>
		<attr name="iab_nameColor" format="color"/>
		<attr name="iab_detail" format="string"/>
		<attr name="iab_detailColor" format="color"/>
		<attr name="iab_lineColor" format="color"/>
		<attr name="iab_hasLine" format="boolean"/>
		<attr name="iab_icon" format="reference"/>
		<attr name="iab_action" format="reference"/>
		<attr name="iab_fa_icon" format="string"/>
		<attr name="iab_fa_icon_color" format="color"/>
		<attr name="iab_fa_action" format="string"/>
		<attr name="iab_fa_action_color" format="string"/>
		<attr name="iab_trigger" format="enum">
		    <enum name="activity" value="0"/>
            <enum name="url" value="1"/>
            <enum name="custom" value="1000" />
		</attr>
		<attr name="iab_action_data" format="string"/>
    </declare-styleable>
    <!-- 轮播 -->
    <declare-styleable name="Banner">
        <!-- 指示点容器背景 -->
        <attr name="banner_pointContainerBackground" format="reference|color" />
        <!-- 指示点背景 -->
        <attr name="banner_pointDrawable" format="reference" />
        <!-- 指示点容器左右内间距 -->
        <attr name="banner_pointContainerLeftRightPadding" format="dimension" />
        <!-- 指示点上下外间距 -->
        <attr name="banner_pointTopBottomMargin" format="dimension" />
        <!-- 指示点左右外间距 -->
        <attr name="banner_pointLeftRightMargin" format="dimension" />
        <!-- 指示点的位置 -->
        <attr name="banner_pointGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- 是否开启自动轮播 -->
        <attr name="banner_pointAutoPlayAble" format="boolean" />
        <!-- 自动轮播的时间间隔 -->
        <attr name="banner_pointAutoPlayInterval" format="integer" />
        <!-- 页码切换过程的时间长度 -->
        <attr name="banner_pageChangeDuration" format="integer" />
        <!-- 页面切换的动画效果 -->
        <attr name="banner_transitionEffect" format="enum">
            <enum name="defaultEffect" value="0" />
            <enum name="alpha" value="1" />
            <enum name="rotate" value="2" />
            <enum name="cube" value="3" />
            <enum name="flip" value="4" />
            <enum name="accordion" value="5" />
            <enum name="zoomFade" value="6" />
            <enum name="fade" value="7" />
            <enum name="zoomCenter" value="8" />
            <enum name="zoomStack" value="9" />
            <enum name="stack" value="10" />
            <enum name="depth" value="11" />
            <enum name="zoom" value="12" />
        </attr>
        <!-- 提示文案的文字颜色 -->
        <attr name="banner_tipTextColor" format="reference|color" />
        <!-- 提示文案的文字大小 -->
        <attr name="banner_tipTextSize" format="dimension" />
    </declare-styleable>
    <!-- 圆角ImageView -->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <!-- GifImageView -->
    <declare-styleable name="GifImageView"> 
        <attr name="auto_play" format="boolean"></attr> 
    </declare-styleable> 
    <!-- 带圆角背景或线框的IconTextView -->
    <declare-styleable name="RoundIconTextView">
        <!-- 圆角大小 -->
        <attr name="radiusSize" format="integer"/>
        <!-- 是否填充背景 -->
        <attr name="fill" format="boolean"/>
        <!-- 填充颜色 -->
        <attr name="fillColor" format="color"/>
        <attr name="roundType" format="enum">
            <!-- 绘制圆角矩形 -->
            <enum name="round" value="0"></enum>
            <!-- 绘制圆形 -->
            <enum name="circle" value="1"></enum>
        </attr>
    </declare-styleable>
    <!-- 带圆角背景或线框的IconTextView -->
    <declare-styleable name="CurrencyTextView">
        <attr name="currency" format="string"></attr>
        <attr name="currencySize" format="dimension"></attr>
        <attr name="currencyColor" format="color"></attr>
        <attr name="amount" format="float"></attr>
        <attr name="amountSize" format="dimension"></attr>
        <attr name="amountColor" format="color"></attr>
    </declare-styleable>
    <!-- 基本表格 -->
    <declare-styleable name="BaseTable">
        <attr name="tableBackgroundColor" format="color"></attr>
        <!-- 是否绘制分割线 -->
        <attr name="splitLine" format="boolean"></attr>
        <!-- 分割线颜色 -->
        <attr name="lineColor" format="color"></attr>
        <!-- 列数 -->
        <attr name="columnNumber" format="integer"></attr>
        <!-- 列高度 -->
        <attr name="columnHeight" format="dimension"></attr>
        <!-- 是否存在头部 -->
        <attr name="hasHeader" format="boolean"></attr>
        <!-- 头部背景颜色-->
        <attr name="headerBackground" format="color"></attr>
        <!-- 头部文本颜色 -->
        <attr name="headerTextColor" format="color"></attr>
        <!-- 头部文本大小 -->
        <attr name="headerTextSize" format="dimension"></attr>
        <!-- 头部高度 -->
        <attr name="headerHeight" format="dimension"></attr>
        <attr name="headerPadding" format="dimension"></attr>
        <attr name="headerLeftPadding" format="dimension"></attr>
        <attr name="headerRightPadding" format="dimension"></attr>
          <attr name="headerTextAlign" format="enum">
			<!-- 左对齐 -->
            <enum name="left" value="0"></enum>
            <!-- 右对齐 -->
            <enum name="right" value="1"></enum>
            <!-- 居中 -->
            <enum name="center" value="2"></enum>
        </attr>
        
        <attr name="cellPadding" format="dimension"></attr>
        <attr name="cellLeftPadding" format="dimension"></attr>
        <attr name="cellRightPadding" format="dimension"></attr>
        <!-- 单元格文本颜色 -->
        <attr name="cellTextColor" format="color"></attr>
        <!-- 单元格文本大小 -->
        <attr name="cellTextSize" format="float"></attr>
        <attr name="cellTextAlign" format="enum">
			<!-- 左对齐 -->
            <enum name="left" value="0"></enum>
            <!-- 右对齐 -->
            <enum name="right" value="1"></enum>
            <!-- 居中 -->
            <enum name="center" value="2"></enum>
        </attr>
        <!-- 列宽计量方式 -->
        <attr name="columnMeter" format="enum">
            <enum name="dip" value="0"></enum>
            <enum name="percent" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>